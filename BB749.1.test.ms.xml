        <desc id="bb749.1.ms.01" dbi="BB749.1.titlepg-v+preface.MS">
            <objtitle>
                <title type="transcribed">Books Owned, Watson</title>
                <objid>
                    <objnumber code="A1">Object 1</objnumber>
                    <objcode code="B1">(Bentley 749.1)</objcode>
